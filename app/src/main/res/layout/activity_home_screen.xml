<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home"
    tools:context=".HomeScreenActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Course"
        android:id="@+id/textTitleCourse"
        android:textColor="@color/colorBlue6"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="23sp"
        android:textSize="18dp"
        android:text="View all"
        android:textColor="@color/colorPurple2"></TextView>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/home_viewpager"
        android:foregroundGravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:overScrollMode="never"
        android:clipToPadding="false">

    </androidx.viewpager.widget.ViewPager>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assignment"
        android:textColor="@color/colorBlue6"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300sp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="300sp"
        android:textSize="18dp"
        android:text="View all"
        android:textColor="@color/colorPurple2"></TextView>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/home_course_viewpager"
        android:foregroundGravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:overScrollMode="never"
        android:clipToPadding="false">

    </androidx.viewpager.widget.ViewPager>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:itemIconSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/bottom_navigation"
        app:itemBackground="@color/colorPurple1"
        app:itemIconTint="@drawable/selector"
        app:menu = "@menu/menu_navigation"
        app:labelVisibilityMode="unlabeled"
        android:layout_alignParentBottom="true">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>