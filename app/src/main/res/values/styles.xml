<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPurple1</item>
        <item name="colorPrimaryDark">@color/colorBlue5</item>
        <item name="colorAccent">@color/colorPurple1</item>
    </style>

    <style name="AppThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPurple1</item>
        <item name="colorPrimaryDark">@color/colorBlue5</item>
        <item name="colorAccent">@color/colorPurple1</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#BDBDBD</item>
        <item name="android:textScaleX">10</item>
    </style>
</resources>
